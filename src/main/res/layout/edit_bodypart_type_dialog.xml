<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/upperBodypartEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPPERBODY"
        android:padding="10dp"
        app:cornerRadius="5dp"
        android:layout_centerHorizontal="true"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/coreBodypartEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CORE"
        android:padding="10dp"
        app:cornerRadius="5dp"
        android:layout_below="@id/upperBodypartEditButton"
        android:layout_centerHorizontal="true"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/lowerBodypartEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOWERBODY"
        android:padding="10dp"
        app:cornerRadius="5dp"
        android:layout_below="@id/coreBodypartEditButton"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>