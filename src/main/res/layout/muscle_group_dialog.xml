<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="30dp">

    <TextView
        android:id="@+id/muscleGroupDialogLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Muscle Group"
        android:textSize="20sp"

        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:id="@+id/muscleGroupDialogLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/muscleGroupDialogLabel">
        <CheckBox
            android:id="@+id/upperbodyMuscleGroupCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Upperbody"
            />
        <CheckBox
            android:id="@+id/coreMuscleGroupCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Core"
            />
        <CheckBox
            android:id="@+id/lowerbodyMuscleGroupCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Lowerbody"
            />
        <CheckBox
            android:id="@+id/fullbodyMuscleGroupCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Fullbody"
            />
    </LinearLayout>


</RelativeLayout>